<h3>Point of Interests</h3>
<br/>
<div class="row">
    <div class="col-3 mh-100">
        <select name="Pois" size="@_pois.Count" @onchange="OnPoiChange">
            @{
                foreach (var poi in _pois)
                {
                    <option value="@poi.Introduction">@poi.Introduction</option>
                }
            }
        </select>
    </div>
    <div class="col-9">
        <b>Introduction: </b> @_selectedPoiValue?.Introduction
        <br/>
        <b>Detail: </b> @_selectedPoiValue?.Detail
        <br/>
        <b>Options: </b>
        @{
            if (_selectedPoiValue is not null)
            {
                var count = 0;
                @foreach (var option in _selectedPoiValue?.Options!)
                {
                    <br/>
                    count++;
                    <i>@count:<button @onclick="() => ActivateOptionSelection(option)">@option.Brief</button> <br/>
                        @option.Detail</i>
                }
            }
        }
    </div>
    @{
        if (_optionResponse is not null)
        {
            @_optionResponse.ResultVerbage
        }
    }

</div>